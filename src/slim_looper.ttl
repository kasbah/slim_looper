@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix lv2:  <http://lv2plug.in/ns/lv2core#> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<https://github.com/kasbah/slim_looper.lv2>
	a lv2:Plugin;
	doap:name "SLim Looper" ;
	lv2:optionalFeature lv2:hardRTCapable ;
	lv2:port [
		a lv2:AudioPort ,
			lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "In"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 1 ;
		lv2:symbol "out" ;
		lv2:name "Out"
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "control" ;
		lv2:name "Control" ;
        lv2:default 0;
        lv2:minimum 0;
        lv2:maximum 2;
        lv2:scalePoint [
			rdfs:label "Play" ;
			rdf:value 0.0
		] , [
			rdfs:label "Pause" ;
			rdf:value 1.0
		] , [
			rdfs:label "Record" ;
			rdf:value 2.0
		];
        lv2:portProperty lv2:integer
	] , [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "record_mode" ;
		lv2:name "Record Mode" ;
        lv2:default 0;
        lv2:minimum 0;
        lv2:maximum 3;
        lv2:scalePoint [
			rdfs:label "New" ;
			rdf:value 0.0
		] , [
			rdfs:label "Overdub" ;
			rdf:value 1.0
		] , [
			rdfs:label "Insert" ;
			rdf:value 2.0
		] , [
			rdfs:label "Replace" ;
			rdf:value 3.0
		];
        lv2:portProperty lv2:integer
	] .
